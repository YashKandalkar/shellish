{
  "name": "shellish",
  "version": "0.0.1",
  "description": "A declarative CLI builder for creating command-line interfaces with ease",
  "author": "Yash Kandalkar <yashsk.yk@gmail.com> (https://yashkandalkar.github.io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yashkandalkar/shellish.git"
  },
  "keywords": [
    "cli",
    "command-line",
    "declarative",
    "arguments",
    "parser",
    "typescript",
    "bun"
  ],
  "main": "index.ts",
  "module": "index.ts",
  "types": "index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    }
  },
  "files": [
    "src/",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "example:basic": "bun examples/basic.ts",
    "example:advanced": "bun examples/advanced.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run type-check && bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  }
}